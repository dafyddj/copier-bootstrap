{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "copier",
    "git-submodules",
  ],
  "extends": [
    "config:recommended",
  ],
  "automergeStrategy": "merge-commit",
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchFileNames": ["template/**"],
      "semanticCommitType": "fix",
    },
    {
      "matchManagers": ["git-submodules"],
      "automerge": true,
    },
  ],
}
